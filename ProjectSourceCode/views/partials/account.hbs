<h2 class="text-xl font-semibold mb-4 mt-4 ml-10">Personal Information</h2>
<form>
    <div class="grid grid-cols-2 gap-10 p-10">
        <div>
            <input type="text" id='name' name='name' placeholder="Name" class="w-full border rounded-xl p-4"/>
        </div>
        <div>
            <input type="email" id='email' name='email' placeholder="Email" class="w-full border rounded-xl p-4"/>
        </div>
        <div>
            <input type="text" id="birthday" name="birthday" class="w-full border rounded-xl p-4" placeholder="Birthday" onfocus="(this.type='date')" onblur="if(!this.value) this.type='text'">
        </div>
        <div>
            <select id='countrySelect' name='countrySelect' placeholder="Country" class="w-full border rounded-xl p-4">
                <option value="" disabled selected>Select Country</option>
            </select>

        </div>
    </div>

    <div class="mt-6 mb-6 ml-10">
        <button type="submit" class="px-6 py-4 bg-green-400 text-black font-semibold rounded-xl hover:bg-green-500">
            Save Changes
        </button>
    </div>
</form>