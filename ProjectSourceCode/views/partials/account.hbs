<h2 class="text-xl font-semibold mb-4 mt-4 ml-10">Personal Information</h2>
<form method="post" action="/settings/account">
    <div class="grid grid-cols-2 gap-5 p-5">
        <div>
            <label class="block text-gray-700 font-semibold mb-2" for="phone">Phone Number</label>
            <input type="tel" maxlength="15" id='phone' name='phone' pattern="^\d+$" placeholder='{{#if user.phone}}{{user.phone}}{{else}}Phone{{/if}}' class="w-full p-4 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
        <div>
            <label class="block text-gray-700 font-semibold mb-2" for="email">Email</label>
            <input type="email" maxlength="254" id='email' name='email' placeholder='{{#if user.email}}{{user.email}}{{else}}Email{{/if}}' class="w-full p-4 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
        <div>
            <label class="block text-gray-700 font-semibold mb-2" for="birthday">Birthday</label>
            <input type="text" id="birthday" name="birthday" class="w-full p-4 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder='{{#if user.birthday}}{{user.birthday}}{{else}}Birthday{{/if}}' onfocus="(this.type='date')" onblur="if(!this.value) this.type='text'">
        </div>
        <div>
            <label class="block text-gray-700 font-semibold mb-2" for="country">Country</label>
            <select id='countrySelect' name='country' placeholder="Country" class="w-full p-4 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="" disabled selected>{{#if user.country}}{{user.country}}{{else}}Country{{/if}}</option>
            </select>
        </div>
        <div>
            <label class="block text-gray-700 font-semibold mb-2" for="username">Username</label>
            <input type="text" maxlength="254" id='username' name='username' placeholder="{{user.username}}" class="w-full p-4 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
        <div>
            <label class="block text-gray-700 font-semibold mb-2" for="password">Password</label>
            <input type="text" maxlength="254" id='password' name='password' placeholder="New Password" class="w-full p-4 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
    </div>
    <div class="flex justify-between items-center ml-5 mr-5 mt-6 mb-6 space-x-4">
        <button type="submit" class="px-6 py-4 bg-green-400 text-black font-semibold rounded-xl hover:bg-green-500">
            Save Changes
        </button>
        <a href="/logout" class="px-6 py-4 bg-gray-200 text-gray-700 font-semibold rounded-xl hover:bg-gray-300">
            Logout
        </a>
    </div>
    {{#if message}}
        {{#each message}}
            <div class="p-2 mb-2 text-sm font-medium rounded-lg {{#if this.error}}bg-red-100 text-red-800{{else}}bg-green-100 text-green-800{{/if}}" role="alert">
                {{ this.text }}
            </div>
        {{/each}}
    {{/if}}
</form>