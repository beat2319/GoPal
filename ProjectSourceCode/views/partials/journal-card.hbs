<div class="journal-card bg-white rounded shadow-md p-4 mb-4 flex justify-between items-start"> 
  {{! Left side - Journal Entry Details }}
  <div class="flex-grow mr-4"> 
    <div class="journal-header flex justify-between items-center mb-2"> 
      <div class="journal-entry-label text-lg font-bold">
        {{journal_title}}
      </div>
      <div class="journal-date text-sm text-gray-600">
        {{formatDate entry_date}}
        {{#if entry_time}}
          at {{formatTime entry_time}}
        {{/if}}
      </div>
    </div>
    <div class="journal-body"> 
      <p>{{journal_entry}}</p>
    </div>
  </div>

  {{! Right side - Delete Form/Button }}
  <div class="flex-shrink-0"> 
    <form method="POST" action="/api/journal/{{entry_id}}" class="inline"> 
      <button
        type="submit"
        class="text-red-500 hover:text-red-700 cursor-pointer p-1" 
        onclick="return confirm('Are you sure you want to delete this journal entry?');"
        title="Delete Journal Entry" 
       >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash">
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M4 7l16 0" />
          <path d="M10 11l0 6" />
          <path d="M14 11l0 6" />
          <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
          <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
        </svg>
      </button>
    </form>
    {{! --- END DELETE FORM --- }}
  </div>

</div>