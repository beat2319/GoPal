<!-- views/partials/character-card.hbs -->
<div class="character-card bg-white rounded-lg shadow-lg p-6 text-center w-64">
  <div class="mb-4">
    <img src="{{characterImage}}" alt="{{characterName}}" class="w-full h-48 object-contain mx-auto">
  </div>
  <h2 class="text-2xl font-semibold text-gray-800">{{characterName}}</h2>
  
  <div class="text-sm text-gray-600 mt-2">
    {{#if hatChoice}}
    <p>Hat: {{hatChoice}}</p>
    {{else}}
    <p>No hat selected</p>
    {{/if}}
    
    <p>Color: {{colorChoice}}</p>
  </div>
</div>