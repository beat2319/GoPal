{{!-- custom-character-card.hbs --}}
<div class="flex items-center justify-center w-40 h-40">
  <div class="w-full h-full bg-white rounded-full shadow-lg border-2 border-gray-200 overflow-hidden flex items-center justify-center hover:shadow-xl transition-all duration-300 hover:scale-105">
    {{#if character.customContent}}
      {{{character.customContent}}}
    {{else}}
      {{#if character.imageUrl}}
        <img src="{{character.imageUrl}}" alt="{{character.name}}" class="w-full h-full object-cover">
      {{else}}
        <div class="text-gray-400 text-center p-4">
          <span>Character goes here</span>
        </div>
      {{/if}}
    {{/if}}
  </div>

  {{#if showName}}
    <div class="mt-2 text-center w-full">
      <span class="font-medium text-gray-700">{{character.name}}</span>
    </div>
  {{/if}}
</div>