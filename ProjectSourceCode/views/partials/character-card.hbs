<div class="character-card bg-white rounded-lg shadow-lg p-6 max-w-sm mx-auto">
  <div class="flex flex-col items-center">
    <!-- Character Image Container -->
    <div class="relative w-48 h-48 rounded-full bg-gray-100 mb-4 overflow-hidden border-4 border-blue-500">
      {{#if characterImage}}
        <img src="{{characterImage}}" alt="Character" class="w-full h-full object-cover">
      {{else}}
        <!-- Placeholder when no image is available -->
        <div class="flex items-center justify-center w-full h-full bg-gray-200 text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
      {{/if}}
    </div>
    
    <!-- Character Name -->
    <h2 class="text-xl font-bold text-gray-800 mb-2">{{characterName}}</h2>
    
    <!-- Character Properties/Stats -->
    <div class="w-full space-y-2 mt-2">
      {{#if characterProperties}}
        {{#each characterProperties}}
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-600">{{this.label}}:</span>
            <span class="text-sm font-bold text-blue-600">{{this.value}}</span>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>