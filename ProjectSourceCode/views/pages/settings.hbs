<div class="flex">
  <aside class="bg-blue-100 px-4 sticky top-0 h-screen overflow-y-auto">
    <!-- Nav bar -->
    {{>nav}}
  </aside>
  <main class="bg-gray-100 p-6 flex flex-col flex-grow">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Settings</h1>
      {{>notification}}
    </div>

    <div class="max-w-7xl">
      <div id="sub-nav-bar" class="py-8 rounded-xl">
        <nav class="flex gap-10">
          <a href="/settings/account"
            class="sub-nav-button px-10 py-4 bg-white hover:bg-gray-300 text-black rounded-xl text-lg font-semibold">Account</a>
          <a href="/settings/profile"
            class="sub-nav-button px-10 py-4 bg-white text-black hover:bg-gray-300 rounded-xl text-lg font-semibold">Profile</a>
          <a href="/settings/pal-settings"
            class="sub-nav-button px-10 py-4 bg-white text-black hover:bg-gray-300 rounded-xl text-lg font-semibold">Pal
            Settings</a>
            <a href="/settings/alert-settings"
            class="sub-nav-button px-10 py-4 bg-white text-black hover:bg-gray-300 rounded-xl text-lg font-semibold">Alerts</a>
        </nav>
      </div>

      <div class="rounded-xl border p-5 bg-white">
        {{#if (eq activeTab "account")}} {{> account}} {{/if}}
        {{#if (eq activeTab "profile")}} {{> profile}} {{/if}}
        {{#if (eq activeTab "pal-settings")}} {{> pal-settings}} {{/if}}
        {{#if (eq activeTab "alert-settings")}} {{> alert-settings alertSettings=alertSettings}} {{/if}}
      </div>
    </div>
  </main>
</div>
