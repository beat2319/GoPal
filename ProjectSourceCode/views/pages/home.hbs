<div class="flex">
  <aside class="bg-blue-100 px-4">
    <!-- Nav bar -->
    {{>nav}}
  </aside>
  <main class="flex-grow p-6 bg-gray-50">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Welcome, {{user.display_name}}!</h1>
      {{>notification}}
    </div>
    
    <!-- Main Dashboard Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      
      <!-- Left Column - Pal and Stats -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Pal Status Card -->
        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/3 flex justify-center mb-4 md:mb-0">
              <img src="{{characterImage}}" alt="Your Pal" class="h-48 w-48 object-contain">
            </div>
            <div class="md:w-2/3 md:pl-6">
              <div class="flex justify-between items-center mb-2">
                <h2 class="text-2xl font-bold">{{characterName}}</h2>
                <a href="/pal" class="text-blue-500 text-sm hover:underline">Customize</a>
              </div>
              
              <!-- Character Stats -->
              <div class="space-y-3">
                <div>
                  <p class="text-gray-600 text-sm mb-1">Health</p>
                  <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <div class="bg-green-500 h-2.5 rounded-full" style="width: 85%"></div>
                  </div>
                </div>
                
                <div>
                  <p class="text-gray-600 text-sm mb-1">Happiness</p>
                  <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <div class="bg-yellow-400 h-2.5 rounded-full" style="width: 75%"></div>
                  </div>
                </div>
                
                <div>
                  <p class="text-gray-600 text-sm mb-1">Level Progress</p>
                  <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <div class="bg-blue-500 h-2.5 rounded-full" style="width: 45%"></div>
                  </div>
                </div>
              </div>
              
              <div class="mt-4 text-sm text-gray-600">
                <p>Keep exercising to improve your pal's stats and unlock new customization options!</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Activity Stats Card -->
        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold">Your Activity</h2>
            <a href="/activity" class="text-blue-500 text-sm hover:underline">View All</a>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="bg-amber-50 p-4 rounded-lg text-center">
              <p class="text-amber-500 font-semibold uppercase text-sm">This Week</p>
              <p class="text-2xl font-bold">{{stats.activityCount}}</p>
              <p class="text-sm">{{pluralize stats.activityCount "activity" "activities"}}</p>
            </div>
            
            <div class="bg-green-50 p-4 rounded-lg text-center">
              <p class="text-green-500 font-semibold uppercase text-sm">Distance</p>
              <p class="text-2xl font-bold">{{stats.totalDistance}}</p>
              <p class="text-sm">miles</p>
            </div>
            
            <div class="bg-blue-50 p-4 rounded-lg text-center">
              <p class="text-blue-500 font-semibold uppercase text-sm">Duration</p>
              <p class="text-2xl font-bold">{{formatDuration stats.totalDuration}}</p>
              <p class="text-sm">this week</p>
            </div>
            
            <div class="bg-purple-50 p-4 rounded-lg text-center">
              <p class="text-purple-500 font-semibold uppercase text-sm">Streak</p>
              <p class="text-2xl font-bold">{{stats.currentStreak}}</p>
              <p class="text-sm">{{pluralize stats.currentStreak "day" "days"}}</p>
            </div>
          </div>
        </div>
        
        <!-- Recent Activities -->
        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold">Recent Activities</h2>
            <a href="/activity" class="text-blue-500 text-sm hover:underline">Add Activity</a>
          </div>
          
          <div class="space-y-3">
            {{#if stats.activities.length}}
              {{#each stats.activities}}
                <div class="flex items-center border-b border-gray-100 pb-3">
                  <!-- Activity Icon -->
                  <div class="bg-blue-100 p-3 rounded-full mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="text-blue-500" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M19 6v5a2 2 0 0 1-2 2h-4l-3 3v-3H8a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2z"></path>
                    </svg>
                  </div>
                  
                  <!-- Activity Details -->
                  <div class="flex-grow">
                    <div class="flex justify-between">
                      <h3 class="font-semibold">{{activity_name}}</h3>
                      <span class="text-sm text-gray-500">{{formatDate activity_date}}</span>
                    </div>
                    <p class="text-gray-600 text-sm">{{duration_minutes}} minutes • {{distance_mi}} miles</p>
                  </div>
                </div>
              {{/each}}
            {{else}}
              <div class="text-center py-8 text-gray-500">
                <p>No recent activities found.</p>
                <button class="mt-4 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg">
                  Log Your First Activity
                </button>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
      
      <!-- Right Column - Widgets -->
      <div class="space-y-6">
        
        <!-- Weather Card -->
        <div class="bg-white rounded-xl shadow p-6">
          <h2 class="text-xl font-bold mb-4">Weather</h2>
          
          {{#if weather}}
            <div class="text-center">
              <div class="flex justify-center items-center">
                <img id="weatherIcon" alt="Weather icon" class="w-16 h-16" src="http://openweathermap.org/img/wn/{{weather.weather.[0].icon}}@2x.png">
                <p class="text-4xl font-bold">{{weather.main.temp}}°</p>
              </div>
              
              <p class="text-lg mt-2">{{weather.weather.[0].description}}</p>
              <p class="text-gray-600">{{weather.name}}</p>
              
              <div class="grid grid-cols-2 mt-4 gap-3">
                <div class="bg-gray-50 p-2 rounded">
                  <p class="text-sm text-gray-600">Wind</p>
                  <p class="font-semibold">{{weather.wind.speed}} mph</p>
                </div>
                <div class="bg-gray-50 p-2 rounded">
                  <p class="text-sm text-gray-600">Humidity</p>
                  <p class="font-semibold">{{weather.main.humidity}}%</p>
                </div>
              </div>
              
              <div class="mt-3 bg-gray-50 p-2 rounded">
                <p class="text-sm text-gray-600">Air Quality</p>
                <p class="font-semibold">{{airQuality}}</p>
              </div>
              
              {{#if error}}
                <p class="text-red-500 font-bold mt-2">{{error}}</p>
              {{/if}}
            </div>
          {{else}}
            <div class="text-center py-4">
              <p id="await-message">Getting weather data...</p>
              <div class="animate-pulse mt-4 flex justify-center">
                <div class="h-10 w-10 bg-gray-200 rounded-full"></div>
              </div>
            </div>
          {{/if}}
        </div>
        
        <!-- Achievements Card -->
        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold">Achievements</h2>
            <a href="#" class="text-blue-500 text-sm hover:underline">View All</a>
          </div>
          
          <div class="space-y-4">
            <div class="bg-green-50 rounded-lg p-3 flex items-center">
              <div class="rounded-full bg-green-100 p-2 mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="text-green-500" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">First Step</h3>
                <p class="text-sm text-gray-600">Complete your first activity</p>
              </div>
            </div>
            
            <div class="bg-gray-100 rounded-lg p-3 flex items-center opacity-70">
              <div class="rounded-full bg-gray-200 p-2 mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="text-gray-500" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">Getting Started</h3>
                <p class="text-sm text-gray-600">Complete 5 activities</p>
                <div class="w-full bg-gray-200 rounded-full h-1.5 mt-1">
                  <div class="bg-blue-500 h-1.5 rounded-full" style="width: 60%"></div>
                </div>
                <p class="text-xs text-right mt-1">3/5</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Journal Prompt Card -->
        <div class="bg-white rounded-xl shadow p-6">
          <h2 class="text-xl font-bold mb-4">Journal</h2>
          
          <p class="text-gray-600 mb-4">How are you feeling about your fitness journey today?</p>
          
          <a href="/journal" class="block text-center bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg">
            Add Journal Entry
          </a>
        </div>
        
        <!-- Friend Activity -->
        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold">Friend Activity</h2>
            <a href="/social/recent" class="text-blue-500 text-sm hover:underline">View All</a>
          </div>
          
          <div class="space-y-3">
            <div class="flex items-center border-b border-gray-100 pb-3">
              <img src="/images/placeholder.jpg" alt="User Avatar" class="w-10 h-10 rounded-full mr-4">
              <div>
                <p><span class="font-semibold">Charlie</span> completed a 3 mile run!</p>
                <p class="text-sm text-gray-500">1 hour ago</p>
              </div>
            </div>
            
            <div class="flex items-center">
              <img src="/images/placeholder.jpg" alt="User Avatar" class="w-10 h-10 rounded-full mr-4">
              <div>
                <p><span class="font-semibold">Alice</span> earned the "Activity Enthusiast" badge!</p>
                <p class="text-sm text-gray-500">3 hours ago</p>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
    
  </main>
  <script src="/js/geolocation.js"></script>
</div>
