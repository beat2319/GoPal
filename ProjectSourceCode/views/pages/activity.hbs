<div class="flex">
  <aside class="bg-blue-100 px-4">
    <!-- Nav bar -->
    {{>nav}}
  </aside>
  <main class="flex-grow p-6">    
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">My Activities</h1>
      {{>notification}}
    </div>

    {{!-- TODO: Achievements awarded component --}}
    {{> achievement-card}}

    <div class="flex flex-col items-center border border-gray-300 rounded-lg p-4 mb-6">
      <p class="uppercase font-semibold text-lg">week of {{stats.startDate}} to {{stats.endDate}}</p>
      <div class="flex justify-between items-center w-full">
        <div class="flex flex-col items-center w-1/4 bg-amber-50 m-2 p-4 rounded-lg">
          <p class="uppercase font-semibold text-amber-500">This week</p>
          <p>{{stats.activityCount}} {{pluralize stats.activityCount "activity" "activities"}}</p>
        </div>
        <div class="flex flex-col items-center w-1/4 bg-green-50 m-2 p-4 rounded-lg">
          <p class="uppercase font-semibold text-green-500">Distance</p>
          <p>{{stats.totalDistance}} mi</p>
        </div>
        <div class="flex flex-col items-center w-1/4 bg-blue-50 m-2 p-4 rounded-lg">
          <p class="uppercase font-semibold text-blue-500">Duration</p>
          <p>{{formatDuration stats.totalDuration}}</p>
        </div>
        <div class="flex flex-col items-center w-1/4 bg-purple-50 m-2 p-4 rounded-lg">
          <p class="uppercase font-semibold text-purple-500">Streak</p>
          {{!-- TODO: Add logic to calculate and display the activity streak --}}
          <p>{{stats.currentStreak}} {{pluralize stats.currentStreak "day" "days"}}</p>
        </div>
      </div>
    </div>

    {{!-- TODO: Add filter for activity types and date ranges --}}

    {{!-- TODO: Add styling/logic to account for large numbers of activities --}}
    <!-- Activity List -->
    <div class="flex mt-8">
      <div id="activities-list" class="w-2/3 mr-4">
        {{#if stats.activities.length}}
        {{#each stats.activities}}
        {{> activity-card this}}
        {{/each}}
        {{else}}
        <p class="text-center py-4 text-gray-500">No activities found. Add your first activity!</p>
        {{/if}}
      </div>

<div id="journal-entries-list" class="w-1/3">
  <h2 class="text-2xl font-semibold mb-4">Journal Entries</h2>

  <!-- Journal Modal Partial -->
  {{> add-journal-modal this}}

  <!-- Render Journal Entries -->
  <div id="journal-list">
    {{#if stats.journals.length}}
      {{#each stats.journals}}
        {{> journal-card}}
      {{/each}}
    {{else}}
      <p class="text-center py-4 text-gray-500">No journal entries logged yet.</p>
    {{/if}}
  </div>

    </div>

  </main>
</div>
