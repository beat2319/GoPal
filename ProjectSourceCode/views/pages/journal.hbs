<div class="flex">
  <aside class="bg-blue-100 px-4">
    <!-- Nav bar -->
    {{>nav}}
  </aside>
  <main class="flex-grow p-6">  
    <div id="journal-entries-list" >
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Journal Entries</h1>
      {{>notification}}
    </div>
      <!-- Journal Modal Partial -->
      {{> add-journal-modal this}}

      <!-- Render Journal Entries -->
      <div id="journal-list">
        {{#if journals.length}}
          {{#each journals}}
            {{> journal-card}}
          {{/each}}
        {{else}}
          <p class="text-center py-4 text-gray-500">No journal entries logged yet.</p>
        {{/if}}
      </div>
    </div>
  <main>
</div>