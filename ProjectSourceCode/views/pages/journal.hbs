<div class="flex">
  {{!-- Add flex-shrink-0 to the aside element --}}
  <aside class="bg-blue-100 px-4 sticky top-0 h-screen overflow-y-auto">
    {{>nav}}
  </aside>

  {{!-- The main content area --}}
  <main class="flex-grow p-6 min-w-0"> 
    <div id="journal-entries-list">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Journal Entries</h1>
        {{>notification}}
      </div>
      {{> add-journal-modal this}}

      <div id="journal-list">
        {{#if journals.length}}
          {{#each journals}}
            {{> journal-card}} 
          {{/each}}
        {{else}}
          <p class="text-center py-4 text-gray-500">No journal entries logged yet.</p>
        {{/if}}
      </div>
    </div>
  </main>
</div>
